<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFCDD2"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/contactFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:text="Post New Job"
            android:textColor="#ce3232"
            android:textSize="40sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/jobLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Location"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/jobIndustry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Industry"
            android:inputType="phone" />

        <EditText
            android:id="@+id/jobType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Type"
            android:inputType="phone" />

        <EditText
            android:id="@+id/jobDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department"
            android:inputType="phone" />

        <EditText
            android:id="@+id/jobEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education"
            android:inputType="phone" />

        <EditText
            android:id="@+id/jobCareer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Career Level"
            android:inputType="phone" />

        <EditText
            android:id="@+id/jobGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:inputType="phone" />

        <EditText
            android:id="@+id/jobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top|start"
            android:hint="Job Description"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="30"
            android:padding="5dp"
            android:scrollHorizontally="false"
            android:singleLine="false" />

        <EditText
            android:id="@+id/requiredThings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top|start"
            android:hint="Must have These Things"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="30"
            android:padding="5dp"
            android:scrollHorizontally="false"
            android:singleLine="false" />

        <Button
            android:id="@+id/jobpostButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Submit"
            android:textColor="#fff" />

    </LinearLayout>

</ScrollView>
